<div class="row align-items-md-stretch">

  {% for student in students %}
    <div class="flex-col col-6  col-md-2 mt-5">
      <div class="h-100 p-3 text-dark bg-light rounded-3">
        <div class="row align-items-center pt-3 ">
          
          <div style="width:130px" class="pb-5">
            <div class="rounded-circle" style="height:90px; width:90px; background:lightgrey; background-size:cover; background-position:center center; background-image:url('assets/profiles-di/{{ student.photo }}.jpg');">

            </div>

              <span style="background:white; transform:translateY(-30px); position: absolute; padding:0.2em; font-weight:600">{{ student.name }}</span>
              <span style="background:white; transform:translateY(-8px); position: absolute; padding:0.2em; ">{{ student.lastname }}</span>
          </div>
            
            <a href="" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#{{ student.lastname | replace(" ", "_") |  replace("'", "") | lower}}">
            
                View Innovation!  

            
            </a>
          </div>
      </div>
    </div>


    <!-- Modal -->
    <div class="modal modal-xl fade" id="{{ student.lastname | replace(" ", "_") | replace("'", "") | lower}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h2 class="modal-title fs-5" id="exampleModalLabel">Designful Innovation</h2>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body p-5" style="background: #F8F5EE">

            <div class="d-flex justify-content-between">
              <div class="pb-5">
                <div class="rounded-circle" style="height:250px; width:250px; background:lightgrey; background-size:cover; background-position:center center; background-image:url('assets/profiles-di/{{ student.photo }}.jpg');">
    
                </div>
                  <h1>
                    <span style="background:white; transform:translateY(-1.975em); position: absolute; padding:0.2em; font-weight:600">{{ student.name }}</span>
                    <span style="background:white; transform:translateY(-0.495em); position: absolute; padding:0.2em; ">{{ student.lastname }}</span>
                  </h1>
                  <span style="height:8px; width:33%; display: block; background-color: #{{ team.color }}"></span>
                </div>
                <h2 class="display-4 ps-5 pt-1">
                  {{ student.hmw }}
                </h2>
               
            </div>

            {% if student.booklet %}
              <img class="w-100" src="assets/booklet-di/{{ student.booklet }}" />
            {% endif %}
             
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

  {% endfor %}
  

</div>



